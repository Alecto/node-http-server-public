# Сервер
APP_PORT=3000
APP_HOST=0.0.0.0
NODE_ENV=development

# MongoDB Atlas / локальна MongoDB
MAIN_DB_ROOT_USER=Username
MAIN_DB_ROOT_PASS=Password
DB_NAME=atlas-products
MONGO_PORT=27017
MONGODB_URI=mongodb+srv://${MAIN_DB_ROOT_USER}:${MAIN_DB_ROOT_PASS}@cluster0.rn9rilw.mongodb.net/?retryWrites=true&w=majority

# Mongoose конфігурація
MONGOOSE_AUTO_INDEX=true
MONGOOSE_MAX_POOL_SIZE=20

# Альтернативні змінні
MONGODB_AUTH_SOURCE=admin

# Встановіть true для увімкнення Auth0 або false для вимкнення
AUTH0_ENABLED=false
# Auth0 конфігурація
AUTH0_ISSUER_BASE_URL=https://YOUR_DOMAIN.auth0.com
AUTH0_CLIENT_ID=your_client_id_here
AUTH0_CLIENT_SECRET=your_client_secret_here
AUTH0_BASE_URL=http://localhost:3000
AUTH0_SECRET=generate_random_secret_32_characters_min

# JWT конфігурація
JWT_SECRET=another_random_secret_for_jwt_tokens
JWT_EXPIRES_IN=7d

# Session конфігурація
SESSION_SECRET=session_secret_random_string
SESSION_MAX_AGE=86400000
